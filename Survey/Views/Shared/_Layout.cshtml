<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
    <link href="~/Content/newstyle/css/newstyle.css" rel="stylesheet" />
    <link href="~/Content/newstyle/css/Loginstylesheet.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark scrolling-navbar" style="background: rgb(43, 98, 99););">
            <a class="navbar-brand" href="#"><strong>Preparatory Year Deanship</strong></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("welcome","LoginUser")"> Home <span class="sr-only">(current)</span></a>
                        </li>
                    <li class="nav-item active">

                        <a class="nav-link" href="@Url.Action("firstloginHome","Login")"> @Session["Fullname"].ToString() <span class="sr-only">(current)</span></a>

                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "LoginUser")">Logout</a>
                    </li>

                </ul>
            </div>
        </nav>
        <div class="view intro hm-purple-light"></div>
    </header>
   
    <div class="container-fluid" style="background:white">
        @RenderBody()
        <hr />
        @*<footer>
                <p>&copy; @DateTime.Now.Date.ToString("dd/MM/yyyy")   - Powered by MKCL</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
